// Prisma schema for Store Rating App
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  OWNER
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  email     String   @unique
  password  String
  address   String
  role      Role     @default(USER)

  // For store owners, one-to-one optional store
  store     Store?

  ratings   Rating[]
}

model Store {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  email     String   @unique
  address   String

  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @unique

  ratings   Rating[]
}

model Rating {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  value     Int
  comment   String?

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String

  @@unique([userId, storeId])
}
